<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="DAO.MessageMapper">
    <!--保存一条消息-->
    <insert id="save" parameterType="Entity.Message">
        insert into DB_xianyu.Message(Messageid,Senderid,Receiverid,Content,DATE)
        values (#{Messageid},#{Senderid},#{Receiverid},#{Content},#{DATE});
    </insert>
    <!--删除一条消息-->
    <delete id="delete" parameterType="int">
        delete from DB_xianyu.Message where Messageid=#{Messageid};
    </delete>
    <!--查询用户收到的消息列表-->
    <select id="findAll" resultType="Entity.Message">
        select * from DB_xianyu.Message
    </select>
    <!--根据短信息id查一条短信息-->
    <select id="findMessageByID" resultType="Entity.Message" parameterType="int">
        select * from DB_xianyu.Message
        where Messageid=#{Messageid}
    </select>
    <!--根据用户查找消息列表-->
    <select id="findByUser" resultType="Entity.Message" parameterType="int">
        select * from DB_xianyu.Message
        where Senderid=#{Senderid} or Receiverid=#{Senderid}
    </select>
    <!--根据发送方和接受方查找消息列表-->
    <select id="findBothSide" resultType="Entity.Message" parameterType="Entity.Message">
        select * from DB_xianyu.Message
        where (Senderid=#{Senderid} and Receiverid=#{Receiverid}) or (Senderid=#{Receiverid} and Receiverid=#{Senderid})
        order by DATE
    </select>

</mapper>