<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wangdi.tradingplatform.DAO.AdministratorMapper">

    <!--新建一个管理员-->
    <insert id="save" parameterType="com.wangdi.tradingplatform.Entity.Administrator">
      insert into T_admin(id,account,password)
      values (null, #{account}, #{password});
   </insert>

    <!--//根据ID删除一个管理员-->
    <delete id="delete" parameterType="int">
      delete from T_admin where id=#{id};
   </delete>

    <!--通过账号查找管理员-->
    <select id="findByAccount" resultType="com.wangdi.tradingplatform.Entity.Administrator">
      select id,account,password from T_admin
      where account = #{Account};
   </select>

    <!--通过ID查找管理员-->
    <select id="findByID" resultType="com.wangdi.tradingplatform.Entity.Administrator">
      select id,account,password from T_admin
      where id = #{id};
   </select>

    <!--查找所有管理员-->
    <select id="findAll" resultType="com.wangdi.tradingplatform.Entity.Administrator">
      SELECT id,account,password from T_admin;
   </select>

</mapper>